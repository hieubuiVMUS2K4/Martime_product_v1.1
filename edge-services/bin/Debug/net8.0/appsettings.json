{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "MaritimeEdge": "Debug"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
      }
    }
  },
  
  "Vessel": {
    "IMO": "9876543",
    "MMSI": "367123456",
    "Name": "MV SAMPLE SHIP",
    "CallSign": "ABCD",
    "VesselType": "Container Ship"
  },

  "Database": {
    "Provider": "PostgreSQL",
    "ConnectionString": "Host=localhost;Port=5433;Database=maritime_edge;Username=edge_user;Password=ChangeMe_EdgePassword123!;Include Error Detail=true",
    "AutoMigrate": true,
    "RetentionDays": {
      "PositionData": 7,
      "AisData": 3,
      "EngineData": 30,
      "FuelConsumption": 90,
      "SafetyAlarms": 90,
      "EnvironmentalData": 7
    }
  },

  "SerialPorts": {
    "GPS": {
      "PortName": "COM1",
      "BaudRate": 4800,
      "Parity": "None",
      "DataBits": 8,
      "StopBits": "One",
      "Enabled": true
    },
    "AIS": {
      "PortName": "COM2",
      "BaudRate": 38400,
      "Parity": "None",
      "DataBits": 8,
      "StopBits": "One",
      "Enabled": true
    },
    "Gyro": {
      "PortName": "COM3",
      "BaudRate": 4800,
      "Parity": "None",
      "DataBits": 8,
      "StopBits": "One",
      "Enabled": false
    }
  },

  "Modbus": {
    "MainEngine": {
      "Type": "RTU",
      "PortName": "COM4",
      "BaudRate": 9600,
      "SlaveAddress": 1,
      "Enabled": true,
      "Registers": {
        "RPM": 0,
        "CoolantTemp": 1,
        "ExhaustTemp": 2,
        "LubeOilPressure": 3,
        "FuelPressure": 4,
        "RunningHours": 5
      }
    },
    "Generator1": {
      "Type": "TCP",
      "IpAddress": "192.168.1.100",
      "Port": 502,
      "SlaveAddress": 2,
      "Enabled": true,
      "Registers": {
        "Voltage": 0,
        "Frequency": 1,
        "Current": 2,
        "ActivePower": 3,
        "RunningHours": 4
      }
    }
  },

  "DataCollection": {
    "PositionInterval": 5,
    "NavigationInterval": 10,
    "EngineInterval": 15,
    "TankLevelInterval": 60,
    "EnvironmentalInterval": 300
  },

  "ShoreAPI": {
    "BaseUrl": "https://api.maritime-system.com",
    "ApiKey": "your-api-key-here",
    "VesselId": "vessel-guid-here",
    "Timeout": 30,
    "Enabled": true
  },

  "Sync": {
    "BatchSize": 100,
    "SyncInterval": 300,
    "RetryAttempts": 5,
    "RetryDelaySeconds": 60,
    "UseCompression": true,
    "HighPriorityInterval": 60,
    "MediumPriorityInterval": 300,
    "LowPriorityInterval": 900
  },

  "MQTT": {
    "BrokerUrl": "mqtt://localhost:1883",
    "Username": "maritime",
    "Password": "maritime123",
    "ClientId": "edge-collector",
    "Topics": {
      "Position": "vessel/{vesselId}/position",
      "Engine": "vessel/{vesselId}/engine",
      "Alarms": "vessel/{vesselId}/alarms",
      "Status": "vessel/{vesselId}/status"
    },
    "Enabled": false
  },

  "Alerts": {
    "EnableAutoGeneration": true,
    "Thresholds": {
      "EngineTemp": 95.0,
      "LubeOilPressure": 2.0,
      "FuelEfficiency": 0.5,
      "PositionTimeout": 300,
      "DepthAlarm": 10.0
    }
  },

  "TelemetrySimulator": {
    "Enabled": true,
    "IntervalSeconds": 5,
    "DataRetentionHours": 24,
    "Comment": "Set Enabled=true for development/testing. In production with real sensors, set to false."
  },

  "DataCleanup": {
    "Enabled": true,
    "CleanupHour": 2,
    "Comment": "Cleanup runs daily at CleanupHour (0-23). Uses Database:RetentionDays policies."
  }
}
